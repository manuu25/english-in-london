---
const currentPath = Astro.url.pathname;
---

<header
  class="fixed top-0 w-full bg-white/90 backdrop-blur-sm z-50 border-b border-lightBlue"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a
          href="/"
          class="font-script text-2xl text-red hover:text-royal transition-colors duration-200"
        >
          <img src="/logo.svg" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a
            href="/"
            class={`hover:text-red transition-colors duration-200 ${currentPath === "/" ? "text-red font-medium" : "text-royal"}`}
          >
            Home
          </a>
          <a
            href="/community"
            class={`hover:text-red transition-colors duration-200 ${currentPath === "/community" ? "text-red font-medium" : "text-royal"}`}
          >
            Community
          </a>
          <a
            href="/stories"
            class={`hover:text-red transition-colors duration-200 ${currentPath === "/stories" ? "text-red font-medium" : "text-royal"}`}
          >
            Stories
          </a>
          <a
            href="/events"
            class={`hover:text-red transition-colors duration-200 ${currentPath === "/events" ? "text-red font-medium" : "text-royal"}`}
          >
            Events
          </a>
          <a
            href="/courses"
            class={`hover:text-red transition-colors duration-200 ${currentPath === "/courses" ? "text-red font-medium" : "text-royal"}`}
          >
            Courses
          </a>
          <a
            href="/contact"
            class="bg-red text-white px-4 py-2 rounded-full hover:bg-darkRed transition-all duration-200"
          >
            Join Us
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button text-royal hover:text-red focus:outline-none"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-lightBlue">
        <a
          href="/"
          class="block px-3 py-2 text-royal hover:text-red transition-colors duration-200"
          >Home</a
        >
        <a
          href="/community"
          class="block px-3 py-2 text-royal hover:text-red transition-colors duration-200"
          >Community</a
        >
        <a
          href="/stories"
          class="block px-3 py-2 text-royal hover:text-red transition-colors duration-200"
          >Stories</a
        >
        <a
          href="/events"
          class="block px-3 py-2 text-royal hover:text-red transition-colors duration-200"
          >Events</a
        >
        <a
          href="/courses"
          class="block px-3 py-2 text-royal hover:text-red transition-colors duration-200"
          >Courses</a
        >
        <a
          href="/contact"
          class="block px-3 py-2 bg-red text-white rounded-full text-center mt-4"
          >Join Us</a
        >
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.querySelector(".mobile-menu-button");
    const mobileMenu = document.querySelector(".mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
